<mvc:View
    controllerName="ec.laurier.imad.controller.Dashboard"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns="sap.m"
	displayBlock="true">

	<ScrollContainer
		vertical="true"
		class="sapUiResponsiveContentPadding">

		<OverflowToolbar id="contentTb" class="titleToolbar" active="true" height="2.5rem">
			<Title text="{i18n>title}" class="title" /> <Label class="subTitle" text="Powered by CP630"/>
		</OverflowToolbar>

		<Title
			visible="true"
			text="Corporate View"
			titleStyle="H3"
			class="sapUiSmallMarginBottom sapUiSmallMarginTop" />
	
		<f:GridContainer>
			<f:layout>
				<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
			</f:layout>
			<f:layoutS>
				<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
			</f:layoutS>

			<w:Card manifest="{manifests>/totalStockValue}" baseUrl="./">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="4" columns="8" />
				</w:layoutData>
			</w:Card>

			<w:Card manifest="{manifests>/totalStockValueByCategory}" baseUrl="./">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="4" columns="4" />
				</w:layoutData>
			</w:Card>

			<w:Card manifest="{manifests>/top5ProductsSold}" baseUrl="./">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="4" columns="4" />
				</w:layoutData>
			</w:Card>

			<w:Card manifest="{manifests>/overviewStockingIssues}" baseUrl="./">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="4" columns="4" />
				</w:layoutData>
			</w:Card>

			<w:Card manifest="{manifests>/currentStateOfStock}" baseUrl="./">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="4" columns="4" />
				</w:layoutData>
			</w:Card>

			<w:Card manifest="{manifests>/productsOutOfStockOrNearlyOutOfStock}" baseUrl="./">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="4" columns="12" />
				</w:layoutData>
			</w:Card>

		</f:GridContainer>
	</ScrollContainer>
</mvc:View>