    "currentStateOfStock": {
        "sap.app": {
            "id": "card.explorer.table.card",
            "type": "card"
        },
        "sap.ui": {
            "technology": "UI5",
            "icons": {
                "icon": "sap-icon://table-view"
            }
        },
        "sap.card": {
            "type": "Table",
            "header": {
                "title": "Current State of Stock",
                "subTitle": "Today"
            },
            "content": {
                "data": {
                    "path": "/results"
                },
                "row": {
                    "columns": [
                        {
                            "title": "{/columns/0/title}",
                            "value": "{productSKU}",
                            "identifier": "{/columns/0/identifier}",
                            "visible": "{/columns/0/visibleFlag}"
                        },
                        {
                            "title": "{/columns/1/title}",
                            "value": "{productName}",
                            "visible": "{/columns/1/visibleFlag}"
                        },
                        {
                            "title": "{/columns/2/title}",
                            "value": "{quantity}",
                            "hAlign": "Center",
                            "visible": "{/columns/2/visibleFlag}"
                        },
                        {
                            "title": "{/columns/3/title}",
                            "value": "{status}",
                            "state": "{statusState}",
                            "visible": "{/columns/3/visibleFlag}"
